{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"target": "es6",
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}